<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_big"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/clm_avg_price"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="AVG price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clm_city"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="city"
            app:layout_constraintEnd_toStartOf="@+id/clm_avg_price"
            app:layout_constraintTop_toTopOf="@+id/clm_avg_price" />

        <TextView
            android:id="@+id/clm_l_name"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="last name"
            app:layout_constraintEnd_toStartOf="@+id/clm_city"
            app:layout_constraintTop_toTopOf="@+id/clm_city" />

        <TextView
            android:id="@+id/clm_f_name"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="first name"
            app:layout_constraintEnd_toStartOf="@+id/clm_l_name"
            app:layout_constraintTop_toTopOf="@+id/clm_l_name" />

        <TextView
            android:id="@+id/clm_id"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="ID"
            app:layout_constraintEnd_toStartOf="@+id/clm_f_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clm_f_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>